<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyStyle">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/primaryText</item>

    </style>


    <style name="MyToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textForToolbar</item>

    </style>

</resources>
